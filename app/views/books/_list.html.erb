    <h1 class="text-dark bg-light p-2 mb-0">User info</h1>
    <%= image_tag user.get_profile_image(100,100) %>
    <table class="table">
      <tbody>
          <tr>
              <th>name</th>
              <th><%= user.name %></th>
          </tr>
          <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
          </tr>
      </tbody>
    </table>
      <div class="row btn btn-outline-secondary btn-block">
          <%= link_to edit_user_path(user.id), class: 'nav-link text-dark' do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
      </div>
