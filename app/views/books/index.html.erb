<%= render 'list', user: @user %>
<%= render 'list2', book: @book %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <% @books.each do |book| %>
  <div>
    <p><%= image_tag book.user.get_profile_image(100,100) %></p>
    <p><%= book.user.name %></p>
    <%= link_to book_path(book.id) do %>
      <p><%= book.title %></p>
    <% end %>
    <p><%= book.caption %></p>
  </div>
  <% end %>
  <%= paginate @books %>